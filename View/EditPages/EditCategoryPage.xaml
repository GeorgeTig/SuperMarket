<Page x:Class="SuperMarket.View.EditPages.EditCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuperMarket.View.EditPages"
      mc:Ignorable="d" 
      Height="350" Width="550"
      Title="EditCategoryPage">

    <Grid Background="white">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   TextWrapping="Wrap"
                   Text="{Binding Title}"
                    
                   Height="50" Width="200"
                   FontSize="24" Margin="0,51,0,0"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="75,145,0,0" 
                   TextWrapping="Wrap" 
                   Text="Name:"
                   VerticalAlignment="Top"
                   Height="30" Width="60" 
                   FontSize="20"/>
        <TextBox   HorizontalAlignment="Left"
                   Margin="140,145,0,0" 
                   TextWrapping="Wrap"
                   Text="{Binding Name}"
                   VerticalAlignment="Top" 
                   Width="130" Height="30" FontSize="18"/>
        <Button Content="{Binding MODIFY}"
                Command="{Binding Button}"
                HorizontalAlignment="Left" 
                Margin="130,200,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="120" FontSize="20"/>

    </Grid>
</Page>
