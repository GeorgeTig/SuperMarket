<Page x:Class="SuperMarket.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuperMarket"
      xmlns:vm="clr-namespace:SuperMarket.ViewModel"
      mc:Ignorable="d" 
      d:Height="550" Width="850"
      Title="AdminPage">


    <Grid Background =" white">
        <StackPanel Height="550" Width="300" HorizontalAlignment="Left" Background="#FFE8E8E8" >
            <Button Content="Categorii" Name="CategoryButton" Command="{Binding CategoryButton}"/>
            <Button Content="Oferte" Name="OfferButton" Command="{Binding OfferButton}"/>
            <Button Content="Producatori" Name="ProducerButton" Command="{Binding ProducerButton}"/>
            <Button Content="Produse" Name="ProductButton" Command="{Binding ProductButton}"/>
            <Button Content="Bonuri" Name="ReceiptButton" Command="{Binding ReceiptButton}"/>
            <Button Content="Utilizatori" Name="UserButton" Command="{Binding UserButton}"/>
            <Button Content="Stocuri" Name="StovkButton" Command="{Binding StockButton}"/>
        </StackPanel>
        <Frame Name="FrameTable" Source="{Binding FrameSource}"  Height="350" Width="550" HorizontalAlignment="Right" />
    </Grid>
</Page>
