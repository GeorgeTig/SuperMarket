<Page x:Class="SuperMarket.View.OfferTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SuperMarket.View"
      xmlns:vm="clr-namespace:SuperMarket.ViewModel"
      mc:Ignorable="d" 
      Height="350 " Width="550"
      Title="OfferTable">

	

    <Grid Background="white">
        <DataGrid ItemsSource="{Binding Offerss}" Height="300" Width="550 " VerticalAlignment="Top"  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Offer Reason" Binding="{Binding Reason}" />
                <DataGridTextColumn Header="Offer DiscountPercentage" Binding="{Binding DiscountPercentage}" />
                
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
